        <!-- Content Header (Page header) -->
        <section class="content-header">
          <h1>
            {{groupName }}
            <small> New Post</small>
          </h1>
          <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">{{groupName }}</li>
          </ol>
        </section>

        <!-- Main content -->
        <section class="content">
          <!-- Small boxes (Stat box) -->
          <!-- Main row -->
          <div class="row">
            <div class="col-md-11">
              <!-- general form elements -->
              <div class="box box-primary">
                <div class="box-header">
                  <h3 class="box-title">Create New {{name}}</h3>
                </div><!-- /.box-header -->
                <!-- form start -->
                
                  <form action="/posts/new/value" method="POST">
                    <input name="user" value="{{user}}" hidden>
                    <input name="groupName" value="{{groupName}}" hidden>
                    <input name="groupId" value="{{groupId}}" hidden>
                    <input name="postName" value="{{name}}" hidden>
                    {{#each categoryNames}}
                    <div class="form-group">
                      <label class="col-sm-2 control-label">{{this}} </label>
                      <div class="col-sm-11">
                        <input type="text" class="form-control"  name="textBody"></input>
                      </div>
                    </div>
                  <!--        <input name="postCat" value="{{this}}" hidden>        
                   -->        
                      {{/each}}
                      <br />
                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                  </form>  

              </div><!-- /.box -->
            </div>
          </div>
        </section>
	
