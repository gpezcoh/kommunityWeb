        <!-- Content Header (Page header) -->
        <section class="content-header">
          <h1>
            Home
          </h1>
          <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
          </ol>
        </section>
 {{#if msg}}
        <div class="pad margin no-print">
            <div class="callout callout-info" style="margin-bottom: 0!important;">
              <h4><i class="fa fa-info"></i> Note:</h4>
              {{msg}}
            </div>
        </div>
  {{/if}}
        <!-- Main content -->
        <section class="content">
        <div class="row">
            <div class="col-md-12">
              <!-- Custom Tabs -->
                  {{#each groups}}
                  <div class="col-group-1 col-md-3">
                  	<a href="/groups/{{../user}}/{{_id}}">
		              <div class="info-group bg-aqua">
		                <span class="info-group-icon"><i class="fa fa-group"></i></span>
		                <div class="info-group-content">
		                  {{name}}
		                </div><!-- /.info-box-content -->
		              </div>
		             </a>
		          </div>
		          {{/each}}

            </div><!-- /.col -->
            <div class="col-md-12">
             {{#each newPosts}}
                    <div class="box box-primary">
                      <div class="box-header">
                        <h3 class="box-title"><span class="{{name}}">{{name}}</span></h3>
                      </div>
                      {{#each posts}}
                      <div class="box-body">
                          <ul class="box-body col-md-12 info">
                          	{{#if group}}<span class="pull-left text-red">[{{group}}]&nbsp;&nbsp;</span>{{/if}}
                            {{#each categoryValues}}
                              {{#with (lookup ../categoryNames @index)}}
                                <div class="{{this}}"> {{../this}}</div>
                              {{/with}}
                            {{/each}}
                          </ul>
                      </div>
                      {{/each}}
                    </div><!-- /.box-content -->
                    <div class="p-x-2"></div>
                   {{/each}}
                  <!-- /.tab-pane -->
            </div>
          </div>
        </section>